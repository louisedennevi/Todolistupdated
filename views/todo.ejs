<%- include("partial/header.ejs") %>

<body>
    <% todos.forEach( (todo)=> {%>
        <div> <%= todo.text %></div>
        <a href="/update/<%=todo._id%>">Update</a>
        <a href="/delete/<%=todo._id%>">Delete</a>


    <% }) %>

   <div>
        <form action="/todo" method="post">
            <input type="text" name="text" id="input" placeholder="Write your todo here...">
            <button type="submit">Add</button>
        </form>
   </div>

   <%- include("partial/footer.ejs") %>

</body>
</html>